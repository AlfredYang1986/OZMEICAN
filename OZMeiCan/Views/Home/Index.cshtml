@{
    ViewBag.Title = "OZMEICAN";
}

@section css {
    <!-- Latest compiled and minified CSS -->
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">*@
    <link href="~/Content/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Optional theme -->
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">*@
    <link href="~/Content/Bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
}

<header style="height: 46px; width: 100%; border: 1px solid red">
    <div id="login" style="width: 1024px; height: 100%; margin: 0px auto; border: 1px solid green">
        <button class="pull-right" type="button" class="btn btn-lg" aria-label="Left Align">
            <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        </button>
        <button class="pull-right" type="button" class="btn btn-lg" aria-label="Left Align">
            <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        </button>
    </div>
</header>

<div id="content" style="width: 1024px; height: 768px; margin: 0px auto; border: 1px solid blue;">
    <div id="label" class="pull-left" style="position: relative; top: 100px; left: 0px; width: 31px; height: 100px; border-bottom: 1px solid red; border-top: 1px solid red; border-left: 1px solid red">
    </div>
    <div id="level0" style="height: 100%">
        <div class="leftPane pull-left" style="width: 50%; height: 100%; border: 1px solid red">
            <div class="leftCover" style="margin-left: 25px; height: 100%; border: 1px solid red">
                <div class="leftPage" style="margin: 5px 0px 5px 20px; border: 1px solid #808080">
                    <div class="leftContent">
                        <div class="hearder" style="height: 80px; border: 1px solid blue">
                            <div class="dropdown" style="width: 30%; margin: 0 auto;">
                                <button style="width: 100%" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                    办公室<span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">办公室</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">家</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">其它</a></li>
                                </ul>
                            </div>

                            <div style="width: 30%; margin: 0 auto">
                                <button id="btnLocateConfirm" class="btn btn-sm pull-left" style="margin: 5px 0px 0px 10px">确定</button>
                                <button id="btnLocateCancel" class="btn btn-sm pull-right" style="margin: 5px 10px 0px 0px">取消</button>
                            </div>
                        </div>
                        <div class="cityNav" style="height: 40px; border: 1px solid red">
                        </div>
                        <div class="cities">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="rightPane pull-left" style="width: 50%; height: 100%; border: 1px solid blue">

        </div>
    </div>

    <div id="level1" class="hidden" style="height: 100%"> 
        <div class="leftPane pull-left" style="width: 50%; height: 100%; border: 1px solid red">
            <div class="leftCover" style="margin-left: 20px; border: 1px solid red">
                <div class="leftPage" style="margin: 5px 0px 5px 5px; border: 1px solid #808080">
                </div>
            </div>
        </div>
        <div class="rightPane pull-left" style="width: 50%; height: 100%; border: 1px solid blue">

        </div>
    </div>
</div>

@section scripts {
    <!-- Latest compiled and minified JavaScript -->
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>*@
    <script src="~/Content/Bootstrap/js/bootstrap.js"></script>

    <script type="text/javascript">
        $(function(){
            var h = $('.leftCover').height();
            $('.leftPage').css("height", (h - 10) + "px");


        });
    </script>
}