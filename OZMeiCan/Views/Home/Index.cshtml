<header style="height: 46px; width: 100%; border: 1px solid red">
    <div id="login" style="width: 1024px; height: 100%; margin: 0px auto; border: 1px solid green">
        <button type="button" class="btn btn-lg pull-right" aria-label="Left Align">
            <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        </button>
        <button id="shoppingBtn" type="button" class="btn btn-lg pull-right" aria-label="Left Align">
            <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
        </button>
    </div>
</header>

<div id="shoppingList" style="width: 1024px; height: 768px; margin: 0px auto; border: 1px solid red;">
    <div style="text-align: center; vertical-align: middle">
        <div class="shoppingHeader">
            <button class="btn btn-lg" id="shoppingBack">GO BACK</button>
        </div>
        <div class="shoppingContent">
            <table style="border: 1px solid #c6baba" border="1" cellspacing="0" cellpadding="0" width="100%">
            	<tr style="border: 1px solid #c6baba">
            		<td style="border: 1px solid #c6baba">已点菜品</td>
            		<td style="border: 1px solid #c6baba">所属餐馆</td>
            		<td style="border: 1px solid #c6baba">价格</td>
            		<td style="border: 1px solid #c6baba">份数</td>
            		<td style="border: 1px solid #c6baba">积分</td>
            	</tr>
            </table>

            <span class="pull-right"><p>运费</p></span>
            <span class="pull-right"><p>总价</p></span>
        </div>
    </div>
</div>

<div id="content" style="width: 1024px; height: 768px; margin: 0px auto; border: 1px solid blue;">
    <div id="level0" style="height: 100%">
        <div class="leftPane pull-left" style="position: relative; width: 50%; height: 100%; border: 1px solid red">
            <div class="label pull-left" style="position: absolute; top: 100px; left: 0px; width: 25px; height: 100px; border-bottom: 1px solid red; border-top: 1px solid red; border-left: 1px solid red">
            </div>
            <div class="leftCover" style="margin-left: 25px; height: 100%; border: 1px solid red">
                <div class="leftPage" style="margin: 5px 0px 5px 20px; border: 1px solid #808080">
                    <div class="leftContent">
                        <div class="hearder" style="height: 80px; border: 1px solid blue">
                            <div class="dropdown" style="width: 30%; margin: 0 auto;">
                                <button style="width: 100%" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                    办公室<span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">办公室</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">家</a></li>
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">其它</a></li>
                                </ul>
                            </div>

                            <div style="width: 30%; margin: 0 auto">
                                <button id="btnLocateConfirm" class="btn btn-sm pull-left" style="margin: 5px 0px 0px 10px">确定</button>
                                <button id="btnLocateCancel" class="btn btn-sm pull-right" style="margin: 5px 10px 0px 0px">取消</button>
                            </div>
                        </div>
                        <div id="cityNav" style="height: 40px; border: 1px solid red">
                        </div>
                        <div id="cities" class="listArea" style="border: 1px solid black">
                        </div>
                        <div id="cityMap" style="display: none">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="rightPane pull-right" style="width: 50%; height: 100%; border: 1px solid blue; position: relative">
            <div class="rightCover" style="margin-right: 25px; height: 100%; border: 1px solid red">
                <div class="rightPage" style="margin: 5px 20px 5px 0px; border: 1px solid #808080">
                    <div class="rightContent">
                        <button class="btn btn-lg changePage" style="position: absolute; top: 20px; right: 50px; width: 50px; padding: 10px 8px">翻页</button>
                        <div style="margin: 30px auto; width: 70%; height: 250px; border: 1px solid #808080">
                            <img style="width: 100%; height: 100%" src="~/Images/naked.jpg" />
                        </div>
                        <div style="display: table; width: 60%; margin: 0 auto; border: 1px solid red">
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                            <div style="display: table-cell; text-align: center; vertical-align: middle"><p style="font-size: 1.5em">一些屁话</p></div>
                        </div>                         
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="level1" style="height: 100%; display: none"> 
        <div class="leftPane pull-left" style="position: relative; width: 50%; height: 100%; border: 1px solid red">
            <div class="label pull-left" style="position: absolute; top: 100px; left: 0px; width: 25px; height: 100px; border-bottom: 1px solid red; border-top: 1px solid red; border-left: 1px solid red">
            </div>
            <div class="leftCover" style="margin-left: 25px; height: 100%; border: 1px solid red">
                <div class="leftPage" style="margin: 5px 0px 5px 20px; border: 1px solid #808080">
                    <div class="leftContent">
                        <div class="hearder" style="height: 120px; border: 1px solid blue">
                            <button class="btn btn-lg pull-left changePage" style="margin-left: 5px; margin-top: 5px; padding: 10px 8px; width: 50px">翻页</button>
                            <div>
                                <div class="input-group" style="margin-top: 15px; margin-left: 15px; margin-right: 15px; padding-left: 20px">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                    <input type="text" class="form-control">
                                </div><!-- /input-group -->

                                <div class="btn-group" role="group" aria-label="..." style="width: 60%; margin: 5px auto; padding-left: 50px">
                                    <button id="mapBtn" type="button" class="btn btn-default">地图</button>
                                    <button id="listBtn" type="button" class="btn btn-default">列表</button>
                                </div>
                            </div>
                        </div>
                        <div id="rtContainer" class="listArea">
                            <div style ="height: 40px; display: table">
                                <h2 style="margin: 5px; float: left">快捷订餐</h2>
                                <p style="vertical-align: middle; display: table-cell">几秒完成订单</p>
                            </div>
                            <div class="btn-group" role="group" aria-label="..." style="width: 100%; height: 20px">
                                <button type="button" class="btn btn-default" style="width: 33.3%; height: 20px; font-size: 0.7em">在线支付</button>
                                <button type="button" class="btn btn-default" style="width: 33.3%; height: 20px; font-size: 0.7em">优惠活动</button>
                                <button type="button" class="btn btn-default" style="width: 33.3%; height: 20px; font-size: 0.7em">VIP特权</button>
                            </div>
                            <div id="rtList" style="margin: 5px; border: 1px solid #808080; overflow:auto">
                            </div>
                        </div>
                        <div id="restMap" style="display: none">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="rightPane pull-left" style="width: 50%; height: 100%; border: 1px solid blue; overflow:auto">
            <div style="margin: 30px auto; width: 70%; height: 250px; border: 1px solid #808080">
                <img style="width: 100%; height: 100%" src="~/Images/naked.jpg" />
            </div>
            <div id="dishList" style="margin: 5px;">
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- Latest compiled and minified JavaScript -->
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>*@
    <script src="~/Content/Bootstrap/js/bootstrap.js"></script>
    <script src="~/Scripts/CityNav/CityNav.js"></script>
    <script src="~/Scripts/RtList/RtList.js"></script>

    <script type="text/javascript">
        var nv = new CityNav(dataCallback);
        var rt = new RtList();

        $(function(){
            var h_l = $('.leftCover').height();
            $('.leftPage').css("height", (h_l - 10) + "px");

            var h_r = $('.rightCover').height();
            $('.rightPage').css("height", (h_r - 10) + "px");

            var city_p_h = $('.leftPage').height();
            $('.listArea').css("height", (city_p_h - 40 - 80) + "px");

            $('.changePage').click(function () {
                var bHidden = $('#level0').css("display") == "none"
                if (bHidden) {
                    $('#level1').hide();
                    $('#level0').show();
                } else {
                    $('#level0').hide();
                    $('#level1').show();
                    rt.createRTContent();
                    rt.createDishContent();
                }
            });

            /**
             * level 1 show list
             */
            $('#listBtn').click(function () {
                $('#restMap').hide();
                $('#rtContainer').show();
            });

            /**
             * level 1 show map
             */
            $('#mapBtn').click(function () {
                var w = $('#rtContainer').width();
                var h = $('#rtContainer').height();
                $('#rtContainer').hide();
                $('#restMap').show();
                $('#restMap').css({ "width": w + "px", "height": h + "px" });

                var mapProp = {
                    center: new google.maps.LatLng(51.508742, -0.120850),
                    zoom: 7,
                    panControl: true,
                    zoomControl: true,
                    mapTypeControl: true,
                    scaleControl: true,
                    streetViewControl: true,
                    overviewMapControl: true,
                    rotateControl: true,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                var map = new google.maps.Map(document.getElementById("restMap")
                  , mapProp);
            });

            $('#shoppingBtn').click(function () {
                $('#shoppingList').css({ "width": "1024px", "height": "768px", "margin": "0 auto" });
                $("#shoppingList").slideDown();
                $("#content").slideUp();
            });            $('#shoppingBack').click(function () {                $('#shoppingList').css({ "width": "1024px", "height": "768px", "margin": "0 auto" });                $("#shoppingList").slideUp();                $("#content").slideDown();            });
        });

        function dataCallback() {
            nv.createNavButton("主页", 0);
            nv.listAllBtns();
        }
    </script>
}